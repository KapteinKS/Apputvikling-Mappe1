<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:theme="@style/PreferenceScreen"
    >

    <Preference
        android:key="headline"
        android:title="@string/preference_headline"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ListPreference
        android:key="@string/sp_key_language"
        android:title="@string/preference_language"
        android:icon="@drawable/flagg"
        android:defaultValue="no"
        android:entries="@array/lang_options_array"
        android:entryValues="@array/lang_values_array"
        android:summary="@string/lang_explanation"/>

    <ListPreference
        android:key="@string/sp_key_length"
        android:title="@string/preference_length"
        android:defaultValue="5"
        android:entries="@array/length_options_array"
        android:entryValues="@array/length_values_array"
        android:summary="@string/length_explanation" />

</PreferenceScreen>